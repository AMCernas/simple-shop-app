<!DOCTYPE html>
<html>
  <head>
    <title>Catalogueapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet"   href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  </head>

  <body>

    <% if user_signed_in?%>

      <div class="d-flex justify-content-between">
      <%= link_to 'Edit registration', edit_user_registration_path, class: 'btn btn-secondary m-2' %>
      <% if current_user.admin? %>
        <%= link_to 'Admin Dashboard', admin_dashboard_index_path, class: 'btn btn-secondary m-2' %>
      <%end%>
      <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-secondary m-2' %>
      </div>

    <% else %>

      <div>
      <%= link_to 'Register', new_user_registration_path, class: 'btn btn-secondary m-2' %>
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-secondary m-2' %>
      </div>

    <% end %>

    <%= yield %>
  </body>
</html>
