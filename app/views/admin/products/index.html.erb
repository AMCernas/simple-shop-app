<div class="container">
  <div class="user-title-container">
    <h1 class="d-flex justify-content-center mt-2 mb-4">Registered products</h1>
  </div>

  <div class="d-flex justify-content-center mt-2 mb-4">
      <%= link_to 'Register product', new_admin_product_path, class: 'btn btn-secondary m-2' %>
  </div>

  <div class="products-container">
    <% if @products.present? %>

      <div class="products-grid">
        <% @products.each do |product| %>
            <div class="product-item">
              <div class="notes-header">
                <p><%= link_to 'X', admin_product_path(product.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %></p>
              </div>
              <h4 class="d-flex justify-content-center"><%= product.name %></h4>
              <%= image_tag product.image, alt: 'Imagen del producto', height: '200' %>
              <p class="d-flex justify-content-center font-weight-bold">
              <%= number_to_currency(product.price) %>
              <div>
              <%= link_to 'edit', edit_admin_product_path(product.id), class: 'btn btn-secondary'  %>
              </div>
              </p>
            </div>
        <% end %>
      </div>

    <%else%> 
      <div class="p-3 mb-2 bg-light text-dark">
        <span class="text-info font-weight-bold">Welcome! </span>
        Create your first post
      </div>
    <%end%>
  </div>

</div>

