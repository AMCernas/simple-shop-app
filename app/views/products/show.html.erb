<div class="d-flex flex-column align-items-center">
  <%= image_tag @product.image, alt: 'Imagen del producto', width: '500', height: '300' %>
  <h2><%= @product.name %></h2>
  <p class="font-weight-bold">Price: <%= number_to_currency(@product.price) %></p>
  <h5>Description:</h5>
  <p><%= @product.description %></p>

  <%= form_with url: cart_items_path, method: :post do |form| %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= form.submit 'Add to Cart', class: 'btn btn-secondary m-2' %>
  <% end %>

  <%= link_to 'Back', products_path, class: 'btn btn-secondary m-2' %>
</div>